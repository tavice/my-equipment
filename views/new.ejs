        <div class="container">
            <h1 class="text-center mb-5 main-title">Add New Equipment</h1>
            <form action="/equipment" method="POST">
                <!-- to use multer Donâ€™t forget the enctype="multipart/form-data" in your form. -->


                <div class="form-group">
                    <label for="yearEquipment">Equipment Year</label>
                    <input type="text" class="form-control" id="year" aria-describedby="year"
                        placeholder="Enter Year Of Equipment" name="year" required>

                </div>
                <div class="form-group">
                    <label for="nameEquipment">Name</label>
                    <input type="text" class="form-control" id="description"
                        placeholder="Enter Name/ Description of the equipment" name="description" required>
                </div>
                <div class="form-group">
                    <label for="model">Model</label>
                    <input type="text" class="form-control" id="description" placeholder="Enter Model of the equipment"
                        name="model" required>
                </div>
                <div class="form-group">
                    <label for="purchaseDate">Date of Purchase</label>
                    <input type="date" class="form-control" id="purchase" placeholder="Enter Date of Purchase"
                        name="purchase">
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="isDriveable" name="isDriveable">
                    <label class="form-check-label" for="isDriveable">Check Box if equipment is driveable</label>
                </div>
                <div class="form-group">
                    <label for="location">Location:</label>
                    <input type="text" class="form-control" id="location" placeholder="Select Equipment Location" name="location"
                        list="locations-options" required>
                    <datalist id="locations-options">
                        <option value="Shop">
                        <option value="Jobsite 1 (San Francisco)">
                        <option value="Jobsite 2 (San Jose)">
                        <option value="Jobsite 3 (San Rafael)">
                    </datalist>
                </div>

                <div class="form-group">
                    <label for="currentUser">Current user</label>
                    <input type="text" class="form-control" id="currentUser" placeholder="Enter current user name"
                        name="currentUser" required>
                </div>


                <div class="form-group">
                    <label for="equipment">Equipment:</label>
                    <input type="text" class="form-control" id="typeEquipment" placeholder="Select equipment" name="typeEquipment"
                        list="equipment-options" required>
                    <datalist id="equipment-options">
                        <option value="pick up truck">
                        <option value="mini excavator">
                        <option value="excavator">
                        <option value="scissor lift">
                    </datalist>
                </div>

                <!-- <div class="form-group">
                <label for="image">Image:</label>
                <input type="file" class="form-control-file" id="img" name="img" accept="image/*">
              </div> -->
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <br>
            <a href="/equipment/" class="mr-3">
                <button class="btn btn-danger">Cancel Equipment Creation</button>
            </a>
        </div>
